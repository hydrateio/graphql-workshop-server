  "main": "src/server.js",
  "author": "Zach Lendon  <zach@hydrate.io> (https://crucial.dev)",
  "license": "MIT",
  "dependencies": {
    "apollo-datasource-rest": "^0.4.0",
    "apollo-server-express": "2.5.0",
    "body-parser": "^1.19.0",
    "express": "4.17.0",
    "graphql": "^14.3.1"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "esm": "^3.2.25",
    "husky": "^2.3.0",
    "jest": "24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "1.19.0",
    "prettier": "^1.17.1"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon -r esm src/server.js",
